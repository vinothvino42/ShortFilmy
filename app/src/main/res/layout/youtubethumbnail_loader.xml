<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/youtubelayoutidnew">

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/youtubethumbnailviewnew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My description"
        android:id="@+id/textViewnew"
        android:layout_below="@+id/youtubethumbnailviewnew"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hearts"
        android:id="@+id/heartbuttonimgnew"
        android:layout_below="@id/textViewnew"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:layout_below="@id/textViewnew"
        android:layout_toRightOf="@+id/heartbuttonimgnew"
        android:layout_marginLeft="10dp"
        android:id="@+id/liketext" />





</RelativeLayout>
